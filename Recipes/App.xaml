<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Recipes.App">
    <Application.Resources>
        <ResourceDictionary>

            <OnPlatform x:Key="MaterialFontFamily" x:TypeArguments="x:String">
                <On Platform="iOS" Value="Material Design Icons" />
                <On Platform="Android" Value="materialdesignicons-webfont.ttf#Material Design Icons" />
            </OnPlatform>

            <Color x:Key="primary">#003da6</Color>

            <Color x:Key="card_header_primary">#003da6</Color>

            <Color x:Key="complimentary_red">#a61900</Color>

            <Color x:Key="recipes_primary">#003da6</Color>

            <Color x:Key="primary_dark">#0a02a8</Color>

            <Color x:Key="color_accent">#0a02a8</Color>

            <Color x:Key="charcoal_gray">#262626</Color>

            <Color x:Key="off_white">#F3F3F3</Color>

            <!-- COLOR RESOURCES: 1=LIGHTEST, EACH NUMBER INCREMENT INCREASES DARKNESS -->

            <!-- Primary -->
            <Color x:Key="PrimaryBlue1">#8BA6D6</Color>
            <Color x:Key="PrimaryBlue2">#4571BE</Color>
            <Color x:Key="PrimaryBlue3">#003da6</Color>
            <Color x:Key="PrimaryBlue4">#00276A</Color>
            <Color x:Key="PrimaryBlue5">#00173D</Color>

            <!-- Neutral -->
            <Color x:Key="NeutralGray1">#E0E4E8</Color>
            <Color x:Key="NeutralGray2">#CDD4DB</Color>
            <Color x:Key="NeutralGray3">#BBC4CE</Color>
            <Color x:Key="NeutralGray4">#898F96</Color>
            <Color x:Key="NeutralGray5">#555A5E</Color>

            <Color x:Key="NeutralGray6">#3e4245</Color>
            <Color x:Key="NeutralGray7">#393c3f</Color>
            <Color x:Key="NeutralGray8">#2e3133</Color>
            <Color x:Key="NeutralGray9">#1d1e20</Color>
            <Color x:Key="NeutralGray10">#0c0c0d</Color>

            <!-- Accents -->
            <Color x:Key="AccentGreen1">#8BD9B8</Color>
            <Color x:Key="AccentGreen2">#45C28D</Color>
            <Color x:Key="AccentGreen3">#00AC63</Color>
            <Color x:Key="AccentGreen4">#007E49</Color>
            <Color x:Key="AccentGreen5">#004F2D</Color>

            <Color x:Key="AccentRed1">#D6968B</Color>
            <Color x:Key="AccentRed2">#BE5745</Color>
            <Color x:Key="AccentRed3">#A61900</Color>
            <Color x:Key="AccentRed4">#791300</Color>
            <Color x:Key="AccentRed5">#4C0C00</Color>

            <Color x:Key="AccentYellow1">#F5E7BA</Color>
            <Color x:Key="AccentYellow2">#F0DA92</Color>
            <Color x:Key="AccentYellow3">#E8CA68</Color>
            <Color x:Key="AccentYellow4">#AB954F</Color>
            <Color x:Key="AccentYellow5">#6A5D31</Color>

            <!--  Control color resources  -->

            <Color x:Key="background_gray">#E8E8E8</Color>

            <Color x:Key="header_gray">#d3d3d3</Color>
        </ResourceDictionary>

        <!--  Control theme resources  -->
        <ControlTemplate x:Key="PrimaryButton">
            <Button BackgroundColor="{DynamicResource Key=primary}" FontSize="Medium" TextColor="White" />
        </ControlTemplate>

        <ControlTemplate x:Key="SecondaryButton">
            <Button BackgroundColor="White" BorderColor="{DynamicResource Key=primary}" BorderWidth="1" FontSize="Medium" TextColor="{DynamicResource Key=primary}" />
        </ControlTemplate>

    </Application.Resources>
</Application>